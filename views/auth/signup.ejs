<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Fonts -->
    <link
      href="https://fonts.googleapis.com/css?family=Raleway:300,400,600"
      rel="stylesheet"
      type="text/css"
    />
    <link rel="stylesheet" href="/stylesheets/signup.css" />
    <!-- Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
    />
    <title>sign up</title>
  </head>
  <%-include("../partial/navbar") -%>

  <body class="bg-muted text-white justify-content-center">
    <div class="container col-6 mt-3">
      <div class="card bg-light">
        <div class="card-header h5 bg-primary">Sign Up</div>
        <form
          action="/auth/signup"
          method="POST"
          id="signupForm"
          style="font-weight: bold"
        >
          <div class="card-body bg-light text-dark px-0" name="my-form">
            <div class="form-group row">
              <label class="col-3 col-form-label text-md-right"
                >First Name :
              </label>
              <div class="col-4">
                <input
                  type="text"
                  id="firstname"
                  class="form-control"
                  name="firstname"
                  required
                />
              </div>
              <div class="col-5" style="height: 38px">
                <div
                  class="alert alert-warning d-none m-0 bg-light"
                  id="firstNameAlert"
                  role="alert"
                  style="font-size: 10px; color: red; border: none"
                >
                  insert valid firstname
                </div>
              </div>
            </div>

            <div class="form-group row">
              <label class="col-3 col-form-label text-md-right"
                >Last Name :
              </label>
              <div class="col-4">
                <input
                  type="text"
                  id="lastname"
                  class="form-control"
                  name="lastname"
                  required
                />
              </div>
              <div class="col-5" style="height: 38px">
                <div
                  class="alert d-none alert-warning m-0 bg-light"
                  id="lastNameAlert"
                  role="alert"
                  style="font-size: 10px; color: red; border: none"
                >
                  insert valid lastname
                </div>
              </div>
            </div>

            <div class="form-group row">
              <label class="col-3 col-form-label text-md-right"
                >Email Address :</label
              >
              <div class="col-4">
                <input
                  type="email"
                  id="email"
                  class="form-control"
                  name="email"
                  required
                />
              </div>
              <div class="col-5" style="height: 38px">
                <div
                  class="alert alert-warning m-0 bg-light"
                  id="firstNameAlert"
                  role="alert"
                  style="font-size: 10px; color: red; border: none"
                ></div>
              </div>
            </div>

            <div class="form-group row">
              <label class="col-3 col-form-label text-md-right"
                >Phone Number :
              </label>
              <div class="col-4">
                <input
                  type="text"
                  id="phonenumber"
                  class="form-control"
                  name="phonenumber"
                  required
                />
              </div>
              <div class="col-5" style="height: 38px">
                <div
                  class="alert alert-warning d-none m-0 bg-light"
                  id="phonenumberAlert"
                  role="alert"
                  style="font-size: 10px; color: red; border: none"
                >
                  insert valid phone number
                </div>
              </div>
            </div>

            <div class="form-group row">
              <label class="col-3 col-form-label text-md-right"
                >Username :</label
              >
              <div class="col-4">
                <input
                  type="text"
                  id="username"
                  class="form-control"
                  name="username"
                  required
                />
              </div>
              <div class="col-5" style="height: 38px">
                <div
                  class="alert alert-warning m-0 bg-light d-none"
                  id="usernameAlert"
                  role="alert"
                  style="font-size: 10px; color: red; border: none"
                ></div>
              </div>
            </div>

            <div class="form-group row">
              <label class="col-3 col-form-label text-md-right"
                >Password :</label
              >
              <div class="col-4">
                <input
                  type="password"
                  id="password"
                  class="form-control"
                  name="password"
                  required
                />
              </div>
              <div class="col-5" style="height: 38px">
                <div
                  class="alert alert-warning m-0 bg-light d-none"
                  id="passwordAlert"
                  role="alert"
                  style="font-size: 10px; color: red; border: none"
                >
                  insert valid password
                </div>
              </div>
            </div>

            <div class="form-group row">
              <label class="col-3 col-form-label text-md-right"
                >Birth Date :
              </label>
              <div class="col-4">
                <input
                  type="date"
                  id="birthdate"
                  class="form-control"
                  name="birthdate"
                  required
                />
              </div>
              <div class="col-5" style="height: 38px">
                <div
                  class="alert alert-warning m-0 bg-light"
                  id="firstNameAlert"
                  role="alert"
                  style="font-size: 10px; color: red; border: none"
                ></div>
              </div>
            </div>

            <div class="form-group row">
              <legend class="col-3 col-form-label text-md-right">Sex :</legend>
              <div class="col-4">
                <div class="form-check">
                  <input
                    class="form-check-input sex"
                    type="radio"
                    name="sex"
                    value="male"
                    checked
                  />
                  <label class="form-check-label" for="gridRadios1">
                    Male
                  </label>
                </div>
                <div class="form-check">
                  <input
                    class="form-check-input sex"
                    type="radio"
                    name="sex"
                    value="female"
                  />
                  <label class="form-check-label" for="gridRadios2">
                    Female
                  </label>
                </div>
                <div class="form-check">
                  <input
                    class="form-check-input sex"
                    type="radio"
                    name="sex"
                    value="none"
                  />
                  <label class="form-check-label" for="gridRadios3">
                    Non-intersex
                  </label>
                </div>
              </div>
            </div>
          </div>

          <div class="d-flex justify-content-center mb-2">
            <button type="submit" class="btn btn-info col-5">Register</button>
            <a href="/auth/signin" class="col-5">
              <button type="button" class="btn btn-danger w-100">
                Login with Google
              </button>
            </a>
          </div>


          <% if (successful) { %>

          <div class="alert alert-success mb-0 font-weight-normal">Registration was successful</div>
          <script>
            setTimeout(() => {
              window.location.href = "/auth/signin";
            }, 3000);
          </script>

          <% } %>
           <% if (error) { %>
          <div class="alert alert-danger mb-0"> <%= error %> </div>

          <% } %>

        </form>
      </div>
    </div>
  </body>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
  <script src="/javascripts/signup.js"></script>
</html>
